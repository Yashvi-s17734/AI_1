generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  email  String @unique

  tasks  Task[]
}

model Task {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  status  String   @default("pending")

  userId  String   @db.ObjectId
  user    User     @relation(fields: [userId], references: [id])
}
